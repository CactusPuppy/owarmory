generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ItemCategory {
  Weapon
  Ability
  Survival
}

enum ItemRarity {
  Common
  Rare
  Epic
}

enum HeroRole {
  Tank
  Damage
  Support
}

model Hero {
  name    String   @id
  role    HeroRole

  builds StadiumBuild[]
  items  Item[]
}

model StadiumBuild {
  id              String      @id @default(cuid(2))
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  buildTitle      String      @db.VarChar(63)
  description     String?
  roundInfos      RoundInfo[]
  additionalNotes String?
  hero            Hero        @relation(fields: [heroName], references: [name])

  heroName String
}

model RoundInfo {
  id          String       @id @default(cuid(2))
  parentBuild StadiumBuild @relation(fields: [buildId], references: [id])
  buildId     String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  note        String?
  power       Power?       @relation(fields: [powerId], references: [id])
  powerId     String?
  items       Item[]
}

model Item {
  id          String    @id @default(cuid(2))
  name        String
  category    ItemCategory
  rarity      ItemRarity  @default(Common)
  description String?
  cost        Int
  statMods    StatMod[]
  hero        Hero?     @relation(fields: [heroName], references: [name])
  iconURL     String?
  removed     Boolean   @default(false)

  roundInfos RoundInfo[]
  heroName   String?
}

model Power {
  id          String  @id @default(cuid(2))
  name        String
  description String
  iconURL     String?
  removed     Boolean @default(false)

  roundInfos RoundInfo[]
}

model Stat {
  id       Int       @id @default(autoincrement())
  name     String
  iconURL  String?
  statMods StatMod[]
}

model StatMod {
  id           String  @id @default(cuid(2))
  stat         Stat    @relation(fields: [statId], references: [id])
  amount       Int
  isPercentage Boolean @default(false)

  Item   Item[]
  statId Int
}
