{
  "name": "owarmory",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "start": "node build/index.js",
    "preview": "vite preview",
    "prepare": "pnpm prepare:sveltekit && pnpm prisma generate && (pnpm husky || true)",
    "prepare:sveltekit": "svelte-kit sync || echo ''",
    "prepare:husky": "husky",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write . && eslint . --fix",
    "lint": "prettier --check . && eslint .",
    "db:fake": "tsx prisma/faker.ts",
    "test:e2e": "playwright test",
    "test:unit": "vitest",
    "test": "pnpm run test:unit && pnpm run test:e2e"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.5",
    "@eslint/js": "^9.18.0",
    "@faker-js/faker": "^9.7.0",
    "@playwright/test": "^1.49.1",
    "@prisma/client": "6.6.0",
    "@sveltejs/adapter-node": "^5.2.12",
    "@sveltejs/kit": "^2.16.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/svelte": "^5.2.7",
    "@types/node": "^22.15.3",
    "dotenv": "^16.5.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-svelte": "^3.0.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.5.1",
    "prettier": "^3.4.2",
    "prettier-plugin-svelte": "^3.3.3",
    "prisma": "^6.6.0",
    "sass-embedded": "^1.87.0",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "tsx": "^4.19.3",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.20.0",
    "vite": "^6.2.5",
    "vitest": "^3.1.2",
    "zod": "^3.24.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@prisma/client",
      "@prisma/engines",
      "esbuild",
      "prisma"
    ]
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "lint-staged": {
    "*.svelte*": "eslint --fix",
    "*.{ts,js,svelte,svelte.ts,svelte.js,scss}": "prettier --write"
  },
  "dependencies": {
    "@auth/core": "^0.39.0",
    "@auth/prisma-adapter": "^2.9.0",
    "@auth/sveltekit": "^1.9.1",
    "isomorphic-dompurify": "^2.24.0",
    "snarkdown": "^2.0.0"
  }
}
